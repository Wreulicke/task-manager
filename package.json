{
  "name": "task-manager",
  "version": "1.0.0",
  "description": "task-management application",
  "main": "index.js",
  "scripts": {
    "test": "nyc ava",
    "build": "npm-run-all prebuild build:js build:bundle",
    "watch": "npm-run-all --parallel watch:*",
    "prebuild": "npm-run-all fix format",
    "fix": "eslint --fix src/**/*.js test/**/*.js",
    "format": "esformatter -i src/**/*.js",
    "watch:browser": "browser-sync start --server --config bs-config.js",
    "watch:js": "npm-run-all prebuild && webpack --watch",
    "watch:test": "npm run test -- --watch",
    "build:js": "cross-env NODE_ENV=production webpack -p",
    "build:bundle": "vulcanize --inline-scripts index.html --out-html docs/index.html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Wreulicke/task-manager.git"
  },
  "author": "Wreulicke",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Wreulicke/task-manager/issues"
  },
  "homepage": "https://github.com/Wreulicke/task-manager#readme",
  "devDependencies": {
    "ava": "^0.16.0",
    "babel-eslint": "^7.1.0",
    "babel-loader": "^6.2.7",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "babel-register": "^6.18.0",
    "browser-sync": "^2.17.5",
    "cross-env": "^3.1.3",
    "esformatter": "^0.10.0",
    "esformatter-jsx": "^7.2.0",
    "eslint": "^3.9.1",
    "eslint-loader": "^1.6.1",
    "eslint-plugin-ava": "^4.0.0",
    "eslint-plugin-react": "^6.5.0",
    "npm-run-all": "^3.1.1",
    "nyc": "^8.4.0",
    "vulcanize": "^1.14.8",
    "webpack": "^1.13.3"
  },
  "dependencies": {
    "localforage": "^1.4.3",
    "material-ui": "^0.16.1",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "react-sortable-pane": "^0.5.4",
    "react-tap-event-plugin": "^1.0.0"
  },
  "esformatter": {
    "plugins": [
      "esformatter-jsx"
    ],
    "jsx": {
      "formatJSX": true,
      "attrsOnSameLineAsTag": false,
      "maxAttrsOnTag": 1,
      "firstAttributeOnSameLine": false,
      "alignWithFirstAttribute": false
    }
  },
  "ava": {
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  }
}